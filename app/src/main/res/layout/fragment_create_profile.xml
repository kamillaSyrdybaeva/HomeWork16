<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/registration_background"
    android:orientation="vertical"
    tools:context=".ui.fragments.CreateProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_add_user_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="226dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/iv_add_user_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@color/black" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_input_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="26dp"
        android:text="Введите свой ник"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/et_nick_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="51dp"
        android:background="@drawable/view_registration_edit_text"
        android:hint="Марк"
        android:inputType="textPersonName"
        android:paddingVertical="9dp"
        android:paddingStart="17dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="7dp"
        android:text="Введите пароль"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="51dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/view_registration_edit_text"
        android:inputType="textPassword"
        android:paddingVertical="9dp"
        android:paddingStart="17dp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="71dp"
        android:background="@drawable/view_registration_button"
        android:paddingHorizontal="32dp"
        android:paddingVertical="10dp"
        android:text="Принять"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp" />

</LinearLayout>